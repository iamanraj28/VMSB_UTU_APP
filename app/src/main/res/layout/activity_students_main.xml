<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".students.StudentsMain"
    android:id="@+id/drawableLayout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Student Dashboard"
            android:id="@+id/toolbar"
            android:background="@color/purple_500"
            app:titleTextColor="#FFFFFF"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:background="@drawable/back"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="65dp"
                            android:layout_marginTop="-90dp"
                            android:src="@drawable/logo"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="370dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center"
                            android:text='@string/vmsb'
                            android:textAlignment="center"
                            android:textColor="#1520A6"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="215dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="135dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/imageAbout"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_centerInParent="true"
                                        android:contentDescription="@null"

                                        android:src="@drawable/logo" />

                                    <TextView
                                        android:id="@+id/about1"
                                        android:layout_width="124dp"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/imageAbout"
                                        android:layout_alignEnd="@+id/imageAbout"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="40dp"
                                        android:layout_marginTop="1dp"
                                        android:layout_marginEnd="-25dp"
                                        android:layout_marginBottom="-5dp"
                                        android:gravity="center"
                                        android:text="@string/about"
                                        android:textSize="16sp" />

                                    <Button
                                        android:id="@+id/buttonAbout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        tools:ignore="SpeakableTextPresentCheck" />
                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/imageCircular"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_centerInParent="true"
                                        android:contentDescription="@null"

                                        android:src="@drawable/notice" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_below="@+id/imageCircular"
                                        android:layout_alignStart="@+id/imageCircular"
                                        android:layout_alignEnd="@+id/imageCircular"
                                        android:layout_marginStart="-35dp"
                                        android:layout_marginTop="1dp"
                                        android:layout_marginEnd="-26dp"
                                        android:layout_marginBottom="18dp"
                                        android:text="@string/circular"
                                        android:textAlignment="center"
                                        android:textSize="16sp" />

                                    <Button
                                        android:id="@+id/buttonCircular"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        tools:ignore="SpeakableTextPresentCheck" />


                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="135dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/imageInstitute"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_centerInParent="true"

                                        android:contentDescription="@null"
                                        android:src="@drawable/institute" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/imageInstitute"
                                        android:layout_alignEnd="@+id/imageInstitute"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="1dp"
                                        android:layout_marginEnd="-6dp"
                                        android:layout_marginBottom="10dp"
                                        android:text="@string/institute"
                                        android:textAlignment="center"
                                        android:textSize="16sp" />

                                    <Button
                                        android:id="@+id/buttonInstitute"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        tools:ignore="SpeakableTextPresentCheck" />

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/imageEvents"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_centerInParent="true"

                                        android:contentDescription="@null"
                                        android:src="@drawable/events" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/imageEvents"
                                        android:layout_alignEnd="@+id/imageEvents"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="-1dp"
                                        android:layout_marginBottom="1dp"
                                        android:text="@string/events"
                                        android:textSize="16sp" />

                                    <Button
                                        android:id="@+id/buttonEvents"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        tools:ignore="SpeakableTextPresentCheck" />


                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="135dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/imagePlacements"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_centerInParent="true"

                                        android:contentDescription="@null"
                                        android:src="@drawable/placements" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/imagePlacements"
                                        android:layout_alignEnd="@+id/imagePlacements"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="1dp"
                                        android:layout_marginEnd="-19dp"
                                        android:layout_marginBottom="19dp"
                                        android:text="@string/placements"
                                        android:textSize="16sp" />

                                    <Button
                                        android:id="@+id/buttonPlacements"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        tools:ignore="SpeakableTextPresentCheck" />

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/imageResults"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_centerInParent="true"

                                        android:contentDescription="@null"
                                        android:src="@drawable/results"
                                        tools:ignore="ImageContrastCheck" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/imageResults"
                                        android:layout_alignEnd="@+id/imageResults"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="1dp"
                                        android:layout_marginBottom="10dp"
                                        android:text="@string/results"
                                        android:textSize="16sp" />

                                    <Button
                                        android:id="@+id/buttonResults"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        tools:ignore="SpeakableTextPresentCheck" />


                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="135dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/imageContact"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_centerInParent="true"

                                        android:contentDescription="@null"
                                        android:src="@drawable/contacts"
                                        tools:ignore="ImageContrastCheck" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="92dp"
                                        android:layout_marginBottom="0dp"
                                        android:text="@string/contact"
                                        android:textSize="16sp" />

                                    <Button
                                        android:id="@+id/buttonContact"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        android:contentDescription="@android:string/httpErrorBadUrl" />

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/imageMap"
                                        android:layout_width="70dp"
                                        android:layout_height="60dp"
                                        android:layout_centerInParent="true"

                                        android:contentDescription="@null"
                                        android:src="@drawable/maps" />

                                    <TextView
                                        android:layout_width="69dp"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/imageMap"
                                        android:layout_alignEnd="@+id/imageMap"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="-10dp"
                                        android:layout_marginEnd="-22dp"
                                        android:layout_marginBottom="1dp"
                                        android:text="@string/map"
                                        android:textSize="16sp" />

                                    <Button
                                        android:id="@+id/buttonMap"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        tools:ignore="SpeakableTextPresentCheck" />


                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>


        </ScrollView>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:id="@+id/navigationView"
        app:headerLayout="@layout/activity_sidemenu_header"
        app:menu="@menu/sidemenu"/>

</androidx.drawerlayout.widget.DrawerLayout>